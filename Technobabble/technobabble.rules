<RESULT> = <description> " " <thing>
<description> = <adjective-phrase> | ?<spaced-adjective-phrase> <descriptor>
<spaced-adjective-phrase> = <adjective-phrase> " "
<descriptor> = <adjective> | ?<prefix> <patient>
<adjective-phrase> = <adverb-phrase> | ?<pre-adjective> <adjective>
<pre-adjective> = ?<prefix> <adjective> " "
<prefix> = [Prefix] "-"
<adjective> = [Adjective] | <gerund>
<gerund> = [PastGerund] | [PresentGerund]
<adverb-phrase> = [Adverb] "-" <adverb-subject>
<adverb-subject> = [PastGerund] | [Adjective]
<thing> = ?<spaced-patient> <object>
<spaced-patient> = <patient> " "
<patient> = [PatientOrObject] | [Agent]
<object> = [Agent] | [Object]
